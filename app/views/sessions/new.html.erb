<div class="container border">
  <div class="form-box" style="text-align: center;
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;">
    <%= form_with scope: :session,
      url: login_path,
      local: true,
      html: {class: "card-body form-inline", style: "width:80%;"} do |f| %>
        <%= f.email_field :email, placeholder: 'Email', style: "margin-bottom:3px;", class: 'form-control', required: true %>
        <%= f.password_field :password, placeholder: 'Password', style: "margin-bottom:3px;", class: 'form-control' %>
        <%= f.submit 'Log in', :class => 'btn btn-info btn-sm' %>
    <% end %>
  </div>
</div>